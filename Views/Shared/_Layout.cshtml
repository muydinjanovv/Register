<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/intro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="~/brand-light.svg" alt="" height="30"
                        class="d-inline-block align-text-top logo-light-shadow">
                </a>

                <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <a class="nav-register btn btn-light" asp-controller="Account" asp-action="Register">Register</a>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0"></ul>
                        <li class="nav-item">
                            <a class="nav-Login btn btn-light" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-Login btn btn-light" asp-controller="Home" asp-action="Authorization">Secret</a>
                        </li>
                    </ul>
            </div>
        </nav>
        @RenderBody()
        </main>
        </div>

        <script src="~/lib/bootstrap/bootstrap.min.bundle.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
